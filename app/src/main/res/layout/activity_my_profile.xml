<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfile">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parents"
        app:layout_constraintEnd_toEndOf="parents">

        <!-- Profile Image Background -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/profile_background"
            android:scaleType="centerCrop"
            android:contentDescription="Background" />

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile_image"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="-48dp"
            android:background="@drawable/circle_white_border"
            android:padding="8dp" />

        <!-- Name & Email -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Natalie Simona"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="natalieS@gmail.com"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:layout_gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Content Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parents"
        app:layout_constraintEnd_toEndOf="parents">

        <!-- Card 1: Selected Recipes -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_favorite"
                    android:tint="#333333"
                    android:contentDescription="Favorites" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Selected Recipes"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:tint="#333333"
                    android:contentDescription="Next" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2: My Recipes -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parents"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parents"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_recipe"
                    android:tint="#333333"
                    android:contentDescription="Recipes" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Recipes"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:tint="#333333"
                    android:contentDescription="Next" />
            </LinearLayout>
        </androidx.cardview.widgets.CardView>

        <!-- Card 3: History Views -->
        <androidx.cardview.widgets.CardView
            android:layout_width="match_parents"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parents"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_history"
                    android:tint="#333333"
                    android:contentDescription="History" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="History Views"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrows_forward"
                    android:tint="#333333"
                    android:contentDescription="Next" />
            </LinearLayout>
        </androidx.cardview.widgets.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>